<%= content_for :title, Author.model_name.human(count: 2) %>

<table class="w-full text-sm text-left rtl:text-right confirm_removetext-gray-500 dark:text-gray-400 shadow">
  <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
    <tr>
      <th scope="col" class="px-6 py-3">
        <%= sort_link @q, :name, Author.human_attribute_name(:name) %>
      </th>
      <th scope="col" class="px-6 py-3">
        <%= sort_link @q, :birth, Author.human_attribute_name(:birth) %>
      </th>
      <th scope="col" class="px-6 py-3">
        <%= sort_link @q, :death, Author.human_attribute_name(:death) %>
      </th>
      <th scope="col" class="px-6 py-3">
        <%= sort_link @q, :books_count, Author.human_attribute_name(:books_count) %>
      </th>
      <th scope="col" class="px-6 py-3">
        <%= t("action") %>
      </th>
    </tr>
  </thead>
  <tbody id='table'>
    <%= render @authors %>
  </tbody>

  <% if @authors.blank? %>
    <tfoot>
      <tr>
        <td colspan="99" class="px-6 py-4 whitespace-nowrap dark:text-white">
          <em><%= t("not_found_result") %></em>
        </td>
      </tr>
    </tfoot>
  <% end %>

</table>
<div class="flex justify-center mt-4">
  <%== pagy_nav(@pagy) %>
</div>
