<%= content_for :title, Author.model_name.human(count: 2) %>

<div class="relative overflow-x-auto sm:rounded-lg" data-controller="dialog" data-action="click->dialog#backdropClose">
  <div class="flex flex-column sm:flex-row flex-wrap space-y-4 sm:space-y-0 items-center justify-between pb-4">
    <div class="bg-white dark:bg-gray-800">
      <div class="relative mt-1">
        <%= render 'authors/filter' %>
      </div>
    </div>

    <%= link_to "Generate", [:new, :author], data: { turbo_frame: dom_id(Author.new), action: 'dialog#open' }, class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
  </div>
</div>

<%= turbo_frame_tag controller_name do %>
  <table class="w-full text-sm text-left rtl:text-right confirm_removetext-gray-500 dark:text-gray-400 shadow">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
      <tr>
        <th scope="col" class="px-6 py-3">
          <%= sort_link @q, :name, Author.human_attribute_name(:name) %>
        </th>
        <th scope="col" class="px-6 py-3">
          <%= sort_link @q, :birth, Author.human_attribute_name(:birth) %>
        </th>
        <th scope="col" class="px-6 py-3">
          <%= sort_link @q, :death, Author.human_attribute_name(:death) %>
        </th>
        <th scope="col" class="px-6 py-3">
          <%= sort_link @q, :books_count, Author.human_attribute_name(:books_count) %>
        </th>
        <th scope="col" class="px-6 py-3">
          <%= t("action") %>
        </th>
      </tr>
    </thead>
    <tbody id='table'>
      <%= render @authors %>
    </tbody>

    <% if @authors.blank? %>
      <tfoot>
        <tr>
          <td colspan="99" class="px-6 py-4 whitespace-nowrap dark:text-white">
            <em><%= t("not_found_result") %></em>
          </td>
        </tr>
      </tfoot>
    <% end %>

  </table>
  <div class="flex justify-center mt-4">
    <%== pagy_nav(@pagy) %>
  </div>
<% end %>
